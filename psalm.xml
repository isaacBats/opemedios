<?xml version="1.0"?>
<psalm
    xmlns="https://getpsalm.org/schema/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    errorLevel="3"
    findUnusedCode="true"
    findUnusedBaselineEntry="false"
    resolveFromConfigFile="true"
    reportMixedIssues="false"
>
  <!-- 1. DefiniciÃ³n de directorios a inspeccionar -->
  <projectFiles>
    <directory name="app" />
    <directory name="tests" />
    <directory name="database" />
    <directory name="routes" />

    <!-- 2. Ignorar vendor/ y storage/ -->
    <ignoreFiles allowMissingFiles="true">
      <directory name="vendor" />
      <directory name="storage" />
    </ignoreFiles>
  </projectFiles>

  <!-- Plugins -->
  <plugins>
    <pluginClass class="Psalm\LaravelPlugin\Plugin" />
  </plugins>

  <!-- Manejo de issues -->
  <issueHandlers>
    <MissingReturnType severity="warning" />
    <NullReference     severity="error"   />
    <PluginIssue name="MixedInferredReturnType" errorLevel="info" />
    <!-- <MixedInferredReturnType errorLevel="info" /> -->
  </issueHandlers>
</psalm>
